@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Consultar Movimientos - UrekaBank</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-image: url('/Content/ConsultaSaldo.png'); /* Cambia la ruta si es necesario */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            color: white;
        }

        .container {
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 15px;
            padding: 40px;
            max-width: 800px;
            margin: 60px auto;
            text-align: center;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.7);
            overflow: hidden;
        }

        h2 {
            margin-bottom: 30px;
            font-size: 28px;
        }

        form {
            text-align: left;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: none;
            border-radius: 5px;
        }

        input[type="submit"], a {
            display: inline-block;
            padding: 12px 20px;
            background-color: #1e90ff;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

            input[type="submit"]:hover, a:hover {
                background-color: #4682b4;
            }

        .table-container {
            overflow-x: auto;
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 700px;
        }

        table, th, td {
            border: 1px solid white;
        }

        th, td {
            padding: 8px;
            text-align: center;
            font-size: 14px;
        }

        th {
            background-color: #1e90ff;
            color: white;
            position: sticky;
            top: 0;
        }

        tr:nth-child(even) {
            background-color: rgba(255, 255, 255, 0.1);
        }

        tr:nth-child(odd) {
            background-color: rgba(255, 255, 255, 0.2);
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Consultar Movimientos</h2>

        <form method="post">
            <label>Cuenta:</label>
            <input type="text" name="cuenta" />
            <input type="submit" value="Consultar" />
        </form>

        @if (ViewBag.Movimientos != null)
        {
            <h3>Resultados:</h3>
            <div class="table-container">
                <table>
                    <tr>
                        @foreach (System.Data.DataColumn col in ((System.Data.DataTable)ViewBag.Movimientos).Columns)
                        {
                            <th>@col.ColumnName</th>
                        }
                    </tr>
                    @foreach (System.Data.DataRow row in ((System.Data.DataTable)ViewBag.Movimientos).Rows)
                    {
                        <tr>
                            @foreach (var item in row.ItemArray)
                            {
                                <td>@item</td>
                            }
                        </tr>
                    }
                </table>
            </div>
        }

        <a href="@Url.Action("Index", "Banco")">Regresar al Menú</a>
    </div>
</body>
</html>
