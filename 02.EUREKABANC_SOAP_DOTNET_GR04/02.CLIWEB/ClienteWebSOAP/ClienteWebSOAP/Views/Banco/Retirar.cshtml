@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Retirar - UrekaBank</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-image: url('/Content/Retiro.png'); /* Cambia la ruta de la imagen si es necesario */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 150vh;
            color: white;
        }

        .container {
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 15px;
            padding: 40px;
            max-width: 400px;
            margin: 100px auto;
            text-align: center;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.7);
        }

        h2 {
            margin-bottom: 30px;
            font-size: 28px;
        }

        form {
            text-align: left;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        input[type="text"], input[type="number"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: none;
            border-radius: 5px;
        }

        input[type="submit"], a {
            display: inline-block;
            padding: 12px 20px;
            background-color: #1e90ff;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

            input[type="submit"]:hover, a:hover {
                background-color: #4682b4;
            }

        p strong {
            color: yellow;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Retirar</h2>

        <form method="post">
            <label>Cuenta:</label>
            <input type="text" name="cuenta" />

            <label>Monto:</label>
            <input type="number" name="monto" />

            <input type="submit" value="Retirar" />
        </form>

        @if (ViewBag.Mensaje != null)
        {
            <p><strong>@ViewBag.Mensaje</strong></p>
        }

        <a href="@Url.Action("Index", "Banco")">Regresar al Menú</a>
    </div>
</body>
</html>
